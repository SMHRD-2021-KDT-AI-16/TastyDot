<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택되었을 때의 배경 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!--클릭 배경색 -->
            <corners android:radius="15dp"/> <!-- 코너를 둥글게 처리 -->
        </shape>
    </item>
    <!-- 선택되지 않았을 때의 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 기본 배경색 -->
            <corners android:radius="15dp"/> <!-- 코너를 둥글게 처리 -->
        </shape>
    </item>
</selector>